@model ProjetoModeloDDD.MVC.ViewModels.MovimentoManualViewModel


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <form>

        <div class="row">
            <div class="form-group col-lg-4">
                <h2>Movimentos manuais</h2>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-4">
                <label>Mês</label>
                @Html.EditorFor(model => model.DAT_MES, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group col-md-4">
                <label>Ano</label>
                @Html.EditorFor(model => model.DAT_ANO, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>


        <div class="row">
            <div class="form-group col-md-4">
                <label for="inputEmail4">Produto</label>
                @Html.DropDownList("COD_PRODUTO", String.Empty)
            </div>
            <div class="form-group col-md-4">
                <label>Cosif</label>
                @Html.DropDownList("COD_COSIF", String.Empty)
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-4">
                <label>Valor</label>
                @Html.EditorFor(model => model.VAL_VALOR, new { htmlAttributes = new { @class = "form-control" } })
            </div>

        </div>
        <div class="row">
            <div class="form-group col-md-4">
                <label>Descrição</label>
                @Html.EditorFor(model => model.DES_DESCRICAO, new { htmlAttributes = new { @class = "form-control" } })
            </div>


        </div>
        <div class="form-group col-md-4">
            @*<button type="submit" class="btn btn-sm btn-primary">Limpar</button>
                <button type="submit" class="btn btn-sm btn-primary">Novo</button>*@
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>

    </form>




}

    @*<div>
            @Html.ActionLink("Back to List", "Index")
        </div>*@

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
